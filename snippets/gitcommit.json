{
  "Conventional Commit": {
    "prefix": [
      "git:feat",
      "git:fix",
      "git:chore",
      "git:docs",
      "git:style",
      "git:refactor",
      "git:test",
      "git:perf",
      "git:ci"
    ],
    "body": [
      "${1|feat,fix,chore,docs,style,refactor,test,perf,ci|}(${2:scope}): ${3:description}"
    ],
    "description": "Conventional Commit message"
  },
  "BREAKING CHANGE footer": {
    "prefix": "git:breaking",
    "body": ["", "BREAKING CHANGE: ${1:description of the breaking change}"],
    "description": "Add BREAKING CHANGE footer"
  },
  "Vault backup timestamp": {
    "prefix": "backup",
    "body": "vault backup: ${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE} ${CURRENT_HOUR}:${CURRENT_MINUTE}:${CURRENT_SECOND}",
    "description": "Current timestamp for vault backup"
  },
  "Chore: spell dictionary update": {
    "prefix": "spell",
    "body": "chore(spell): update spell dictionary: ${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE} ${CURRENT_HOUR}:${CURRENT_MINUTE}:${CURRENT_SECOND}",
    "description": "Timestamped spell dictionary update"
  },
  "Chore: snippets update": {
    "prefix": "snippets",
    "body": "chore(snippets): update snippets collection: ${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE} ${CURRENT_HOUR}:${CURRENT_MINUTE}:${CURRENT_SECOND}",
    "description": "Timestamped snippets collection update"
  },
  "Chore: apps package list": {
    "prefix": "apps",
    "body": "chore(apps): update default package list: ${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE} ${CURRENT_HOUR}:${CURRENT_MINUTE}:${CURRENT_SECOND}",
    "description": "Timestamped apps list update"
  },
  "Chore: plugins package list": {
    "prefix": "plugins",
    "body": "chore(plugins): update plugins package list: ${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE} ${CURRENT_HOUR}:${CURRENT_MINUTE}:${CURRENT_SECOND}",
    "description": "Timestamped plugins list update"
  },
  "Chore: neovim submodule": {
    "prefix": "nvim",
    "body": "chore(nvim): update neovim sub module: ${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE} ${CURRENT_HOUR}:${CURRENT_MINUTE}:${CURRENT_SECOND}",
    "description": "Timestamped neovim submodule update"
  }
}
