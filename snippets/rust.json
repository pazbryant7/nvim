{
  "For in range": {
    "prefix": "forr",
    "body": ["for ${1:i} in ${2:0..10} {", "\t${3}", "}"],
    "description": "Rust-style for loop over range"
  },
  "For in iterable": {
    "prefix": "forin",
    "body": ["for ${1:item} in ${2:iterable} {", "\t${3}", "}"],
    "description": "For loop over iterator"
  },
  "While loop": {
    "prefix": "wh",
    "body": ["while ${1:condition} {", "\t${2}", "}"],
    "description": "While loop"
  },
  "If statement": {
    "prefix": "if",
    "body": ["if ${1:condition} {", "\t${2}", "}"],
    "description": "If statement"
  },
  "If-else": {
    "prefix": "ife",
    "body": ["if ${1:condition} {", "\t${2}", "} else {", "\t${3}", "}"],
    "description": "If-else statement"
  },
  "If-else if-else": {
    "prefix": "ifei",
    "body": [
      "if ${1:condition1} {",
      "\t${2}",
      "} else if ${3:condition2} {",
      "\t${4}",
      "} else {",
      "\t${5}",
      "}"
    ],
    "description": "If-else if-else chain"
  },
  "Match expression": {
    "prefix": "match",
    "body": [
      "match ${1:variable} {",
      "\t${2:pattern} => {",
      "\t\t${3}",
      "\t},",
      "\t_ => {",
      "\t\t${4}",
      "\t},",
      "}"
    ],
    "description": "match expression with wildcard arm"
  },
  "Struct definition": {
    "prefix": "st",
    "body": ["struct ${1:MyStruct} {", "\t${2}", "}"],
    "description": "Struct definition"
  },
  "Impl block": {
    "prefix": "impl",
    "body": ["impl ${1:MyStruct} {", "\t${2}", "}"],
    "description": "Impl block for a type"
  },
  "Function": {
    "prefix": "fn",
    "body": [
      "fn ${1:my_function}(${2:args}) -> ${3:ReturnType} {",
      "\t${4}",
      "}"
    ],
    "description": "Function definition"
  },
  "Main function": {
    "prefix": "main",
    "body": ["fn main() {", "\t${1}", "}"],
    "description": "Main function"
  },
  "If let": {
    "prefix": "iflet",
    "body": ["if let ${1:Some(val)} = ${2:option} {", "\t${3}", "}"],
    "description": "if let pattern matching"
  },
  "Infinite loop": {
    "prefix": "loop",
    "body": ["loop {", "\t${1}", "}"],
    "description": "Infinite loop"
  },
  "println! debug": {
    "prefix": "pr",
    "body": "println!(\"${1:{:?}}\", ${2:value});",
    "description": "Print with Debug formatting"
  }
}
