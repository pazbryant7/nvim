{
  "Header guard": {
    "prefix": "hdr",
    "body": [
      "#ifndef ${1:HEADER_H}",
      "#define $1",
      "",
      "${2}",
      "",
      "#endif // $1"
    ],
    "description": "C/C++ header include guard"
  },

  "For loop (int i)": {
    "prefix": "fori",
    "body": ["for (int ${1:i} = 0; $1 < ${2:n}; $1++) {", "\t${3}", "}"],
    "description": "Classic for loop with int i"
  },

  "While loop": {
    "prefix": "wh",
    "body": ["while (${1:condition}) {", "\t${2}", "}"],
    "description": "While loop"
  },

  "Do-while loop": {
    "prefix": "dowh",
    "body": ["do {", "\t${1}", "} while (${2:condition});"],
    "description": "Do-while loop"
  },

  "If statement": {
    "prefix": "if",
    "body": ["if (${1:condition}) {", "\t${2}", "}"],
    "description": "If statement"
  },

  "If-else": {
    "prefix": "ife",
    "body": ["if (${1:condition}) {", "\t${2}", "} else {", "\t${3}", "}"],
    "description": "If-else statement"
  },

  "If-else if-else": {
    "prefix": "ifei",
    "body": [
      "if (${1:condition1}) {",
      "\t${2}",
      "} else if (${3:condition2}) {",
      "\t${4}",
      "} else {",
      "\t${5}",
      "}"
    ],
    "description": "If-else if-else chain"
  },

  "Switch statement": {
    "prefix": "sw",
    "body": [
      "switch (${1:variable}) {",
      "\tcase ${2:value}:",
      "\t\t${3}",
      "\t\tbreak;",
      "\tdefault:",
      "\t\t${4}",
      "\t\tbreak;",
      "}"
    ],
    "description": "Switch statement with case and default"
  },

  "Struct": {
    "prefix": "st",
    "body": ["struct ${1:MyStruct} {", "\t${2}", "};"],
    "description": "C struct definition"
  },

  "Function": {
    "prefix": "fn",
    "body": ["${1:void} ${2:my_function}(${3:void}) {", "\t${4}", "}"],
    "description": "Function definition"
  },

  "Main function": {
    "prefix": "main",
    "body": [
      "int main(int argc, char *argv[]) {",
      "\t${1}",
      "\treturn 0;",
      "}"
    ],
    "description": "Standard main function"
  },

  "Printf": {
    "prefix": "pr",
    "body": ["printf(\"${1:%s\\n}\", ${2});"],
    "description": "printf statement"
  }
}
